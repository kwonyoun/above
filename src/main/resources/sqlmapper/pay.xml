<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.above.dao.PayDao">

    <!-- <insert id="paySuccess" >
        insert into pay values(default, ${paid_amount}, #{imp_uid} )
    </insert> -->

    <insert id="paySuccess" >
        insert into ordinfo values(default, #{memId}, ${paid_amount} ,#{imp_uid}, #{buyerName}, #{buyerMobile}, #{buyerAddr}, #{ordAsk}, #{ordDate}, #{ordProdNum}, #{ordQuan} )
    </insert>

    <select id="payInfoSelect" parameterType="String" resultType="com.example.above.vo.OrdinfoVO" >
        select * from ordinfo where imp_uid = #{imp_uid}
    </select>

</mapper>